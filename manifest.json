{
  "manifest_version": 3,
  "name": "SEAF Regex Fetch Tester",
  "version": "0.0.1",
  "description": "정규식 기반 게시글 탐색 및 로비 링크 추출 테스트",
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>", 
    "https://gall.dcinside.com/mgallery/board/*id=helldiversseries*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}