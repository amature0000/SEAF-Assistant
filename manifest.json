{
  "manifest_version": 3,
  "name": "SEAF Assistant: 헬다이버즈 시리즈 갤러리 어시스턴트",
  "version": "0.0.1",
  "description": "헬다이버즈 시리즈 갤러리 망호 자동 생성 및 참여, 실시간 알림 지원 확장 프로그램",
  "permissions": [
    "storage",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://gall.dcinside.com/mgallery/board/*id=helldiversseries*",
    "https://steamcommunity.com/id/*",
    "https://steamcommunity.com/profiles/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gall.dcinside.com/mgallery/board/lists/?id=helldiversseries*",
        "https://gall.dcinside.com/mgallery/board/view/?id=helldiversseries*",
        "https://gall.dcinside.com/mgallery/board/write/?id=helldiversseries*"
      ],
      "js": [
        "config.js", 
        "scripts/content.js"
      ],
      "css": [
        "styles/seaf_main.css",
        "styles/tags.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "config.js",
        "styles/seaf_main.css",
        "styles/tags.css",
        "icons/icon128.png"
      ],
      "matches": [
        "https://gall.dcinside.com/*"
      ]
    }
  ]
}